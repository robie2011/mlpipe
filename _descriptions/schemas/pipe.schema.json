{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "Pipeline",
    "description": "Describes piple to build with processors and aggregators",
    "type": "object",
    "required": ["source"],
    "properties": {
        "source": {
            "$ref": "datasource.schema.json#definitions/datasources"
        },
        "pipe": {
            "description": "pipeline for preprocessing",
            "type": "array",
            "items": {
                "$ref": "processors.schema.json#/definitions/anyProcessor"
            }
        },
        "analyzer": {
            "type": "object",
            "required": ["groupBy", "metrics"],
            "properties": {
                "groupBy": {
                    "type": "array",
                    "items": {
                        "oneOf": [{
                            "enum": ["year", "month", "weekday"]
                        }]
                    }
                },
                "metrics": {
                    "type": "array",
                    "items": {"$ref": "aggregators.schema.json#definitions/anyAggregator"} 
                }
            }
        }
    },
    "definitions": {
        "processor": {
            "oneOf": [
                {
                    "type": "object",
                    "properties": {
                        "kind": {
                            "type": "string",
                            "const": "process"
                        }
                    }
                }
            ]
        }
    }
}